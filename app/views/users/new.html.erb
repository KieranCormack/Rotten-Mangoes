<h1>Sign Up</h1>
<div class='container'>
  <div class='row'>
    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div>
          <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <%= f.label "email" %><br>
        <%= f.text_field "email", :class => 'form-control small-input'%>
      </div>
      <div>
        <%= f.label "firstname", "First Name" %><br>
        <%= f.text_field "firstname", :class => 'form-control small-input' %>
      </div>
      <div>
        <%= f.label "lastname", "Last Name" %><br>
        <%= f.text_field "lastname", :class => 'form-control small-input' %>
      </div>
      <div>
        <%= f.label "password" %><br>
        <%= f.password_field "password", :class => 'form-control small-input' %>
      </div>
      <div>
        <%= f.label "password_confirmation" %><br>
        <%= f.password_field "password_confirmation", :class => 'form-control small-input' %>
      </div>
      <div>
        <%= f.submit "Submit", :class => 'btn btn-danger button-margin' %>
      </div>

    <% end %>
  </div>
</div>