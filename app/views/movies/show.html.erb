
<div class="row">
  <div class="col-lg-12">
    <div class="well centered">
        <%= link_to "Back to all movies", movies_path, :class => "btn btn-danger centered" %>
      </div>
    </div>
  </div>
  <hr>
  <div class='row'>
    <div class='col-lg-4'>
      <%= image_tag(@movie.image.big.to_s, :class =>'show-image img img-thumbnail') %>
    </div>
    <div class='col-lg-8'>
      <h2><%= @movie.title %> (<%= link_to "edit", edit_movie_path(@movie) %>, <%= link_to "delete", movie_path(@movie), method: :delete, confirm: "You sure?" %>) | <%= @movie.review_average %>/10</h2>
      <h3><%= formatted_date(@movie.release_date) %></h3>
      <h4>Dir. <%= @movie.director %> | <%= @movie.runtime_in_minutes %> minutes</h4>
      <p><%= @movie.description %></p>
      <h3>Reviews of <em><%= @movie.title %></em></h3>
      <% if current_user %>
        <% @movie.reviews.each do |review| %>
          <p><%= review.text %></p>
          <p><%= review.rating_out_of_ten %>/10</p>
          <small>- <%= review.user.full_name %></small><br/>
        <% end %>
        <p><%= link_to "Write a review!", new_movie_review_path(@movie) %></p>
      <% else %>
        <p>Please <%= link_to "log in", new_session_path %> to see reviews and add your own.</p> 
      <% end %>
    </div>
  </div>
</div>