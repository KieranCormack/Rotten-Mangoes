<footer>
  <small>
    <% if current_user %>
      <% if admin? && preview_mode? %>
        Mimicing
      <% else %>
        Signed in as
      <% end %>
      <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>
