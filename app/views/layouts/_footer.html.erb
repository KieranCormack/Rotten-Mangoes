<footer>
  <div class='container footer-color centered'>
    <div class='row'>
        <div class='well'>
          <small>
            <% if current_user %>
              Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
              <% if admin? %>
                <%= link_to "Admin Management", admin_users_path %>
              <% end %>
            <% else %>
              <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
            <% end %>
            <!-- switch back to admin -->
            <% if impersonating? %>
            Actually logged in as <%= actual_user.email %>
            <%= link_to 'switch_back', admin_impersonator_path, method: :post%>
            <% end %>
          </small>
        </div>
      </div>
    </div>
  </div>
</footer>
